{
  "compilerOptions": {
    "target": "ESNext",                               
    "module": "ESNext",                                
    "moduleResolution": "node", 
    "types": ["vite/client", "node"],                   
    "esModuleInterop": true,  
    "resolveJsonModule": true,
    "jsx": "react-jsx",                          
    "forceConsistentCasingInFileNames": true,          
    "strict": true,                                      
    "skipLibCheck": true,   
    "allowJs":false,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "noEmit": true                
  },
  "include": ["src"]
}