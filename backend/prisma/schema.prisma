generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
enum Role {
  ADMIN
  USER
}
model User {
  id       Int      @id @default(autoincrement())
  name String @db.VarChar(255)
  language String @db.VarChar(255)
  password String @db.VarChar(255)
  role Role @default(USER)
}